<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.auth.AdminLoginController"
      alignment="CENTER" spacing="20"
      styleClass="auth-page">

    <padding><Insets top="60" right="60" bottom="60" left="60"/></padding>

    <VBox alignment="CENTER" spacing="20" styleClass="auth-card admin-card" maxWidth="420">
        <padding><Insets top="35" right="40" bottom="35" left="40"/></padding>

        <Label text="⚙" style="-fx-font-size: 40px;"/>
        <Label text="Espace Admin" styleClass="auth-title admin-title"/>
        <Label text="Connectez-vous en tant qu'administrateur" styleClass="auth-subtitle"/>

        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Email Admin" styleClass="auth-label"/>
            <TextField fx:id="emailField" promptText="Entrez votre email admin" styleClass="auth-input"/>
        </VBox>

        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Mot de passe" styleClass="auth-label"/>
            <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="auth-input"
                           onAction="#onLogin"/>
        </VBox>

        <Label fx:id="errorLabel" styleClass="auth-error" wrapText="true"/>

        <Button text="Connexion Admin" onAction="#onLogin" styleClass="auth-btn admin-btn" maxWidth="Infinity"/>

        <Hyperlink text="← Retour à la connexion" onAction="#onBackToHome" styleClass="auth-link"/>
    </VBox>

</VBox>
