<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.seance.AddParticipantController">

    <Label fx:id="lblSeanceTitle" text="Ajouter un participant" textFill="#00302e">
        <font> <Font name="System Bold" size="18.0" /> </font>
    </Label>

    <VBox spacing="5.0" alignment="CENTER_LEFT">
        <Label text="Select Member:" textFill="#666" style="-fx-font-weight: bold;"/>

        <ComboBox fx:id="comboMembre" editable="true" prefWidth="350.0" promptText="Type name to search..." style="-fx-font-size: 14px;"/>

        <Label text="* Start typing to filter the list" textFill="#999" style="-fx-font-size: 11px;"/>
    </VBox>

    <Button onAction="#confirm" prefWidth="350.0" style="-fx-background-color: #ffb800; -fx-text-fill: #00302e; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px; -fx-padding: 10;" text="Add to Session" />

    <Label fx:id="lblMessage" textFill="#e74c3c" visible="false" wrapText="true" textAlignment="CENTER"/>

</VBox>